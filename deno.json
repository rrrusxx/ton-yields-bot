{
  "name": "ton-yields-bot",
  "version": "1.0.0",
  "tasks": {
    "dev": "deno run --unstable-cron --allow-net --allow-env --allow-read --allow-import --watch src/main.ts",
    "start": "deno run --unstable-cron --allow-net --allow-env --allow-read --allow-import src/main.ts",
    "post": "deno run --unstable-cron --allow-net --allow-env --allow-read --allow-import src/main.ts --post-now",
    "test-msg": "deno run --unstable-cron --allow-net --allow-env --allow-read --allow-import src/main.ts --test",
    "test": "deno test --allow-net --allow-env --allow-read --allow-import"
  },
  "imports": {
    "grammy": "https://deno.land/x/grammy@v1.21.1/mod.ts",
    "grammy/types": "https://deno.land/x/grammy@v1.21.1/types.ts",
    "std/": "https://deno.land/std@0.208.0/",
    "ethers": "npm:ethers@^6.13.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  }
}
